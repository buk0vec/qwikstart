{
  "name": "qwik-saas-boilerplate",
  "description": "A boilerplate for building a SaaS with Qwik",
  "engines": {
    "node": ">=15.0.0"
  },
  "private": true,
  "scripts": {
    "build": "qwik build",
    "build.client": "vite build",
    "build.preview": "vite build --ssr src/entry.preview.tsx",
    "build.types": "tsc --incremental --noEmit",
    "deploy": "echo 'Run \"npm run qwik add\" to install a server adapter'",
    "dev": "vite --mode ssr",
    "dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
    "db.start": "supabase start",
    "db.types": "supabase gen types typescript --local > ./src/utils/supabaseTypes.ts",
    "db.stop": "supabase stop",
    "fmt": "prettier --write .",
    "fmt.check": "prettier --check .",
    "lint": "eslint \"src/**/*.ts*\"",
    "preview": "qwik build preview && vite preview --open",
    "start": "vite --open --mode ssr",
    "qwik": "qwik"
  },
  "devDependencies": {
    "@builder.io/qwik": "0.24.0",
    "@builder.io/qwik-city": "0.7.0",
    "@supabase/supabase-js": "^2.10.0",
    "@tailwindcss/forms": "^0.5.3",
    "@types/eslint": "8.21.1",
    "@types/node": "^18.14.0",
    "@types/node-fetch": "latest",
    "@typescript-eslint/eslint-plugin": "5.54.0",
    "@typescript-eslint/parser": "5.54.0",
    "autoprefixer": "^10.4.13",
    "clsx": "^1.2.1",
    "dotenv": "^16.0.3",
    "eslint": "8.35.0",
    "eslint-plugin-qwik": "0.21.0",
    "node-fetch": "3.3.0",
    "postcss": "^8.4.16",
    "prettier": "2.8.4",
    "supabase": "^1.42.5",
    "tailwind-merge": "^1.10.0",
    "tailwindcss": "^3.1.8",
    "typescript": "4.9.5",
    "undici": "5.20.0",
    "vite": "4.1.4",
    "vite-tsconfig-paths": "3.5.0",
    "zod": "^3.21.4"
  }
}
